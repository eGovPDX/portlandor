{
  "env": {
    "browser": true,
    "node": true,
    "jest": true, // Tell ESLint about the environment variables provided by Jest
    "es6": true
  },
  "root": true,
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "settings": {
    "jest": {
      "version": 26
    }
  },
  "plugins": ["jest", "jest-formatting"],
  "extends": [
    "eslint:recommended",
    "plugin:jest/recommended",
    "plugin:jest-formatting/recommended",
    "plugin:prettier/recommended"
  ]
}
