{
  "name": "visual-regression",
  "version": "1.0.0",
  "description": "Visual regression test suite for Portland.gov",
  "scripts": {
    "jest-full": "jest --config ./jest.full-regression.config.js",
    "jest-test": "jest --config ./jest.config.js",
    "single-test": "percy exec -- jest --config ./jest.config.js",
    "single-test:watch": "percy exec -- jest --config ./jest.config.js --watch",
    "all-tests": "percy exec -- jest --runInBand --config ./jest.config.js"
  },
  "devDependencies": {
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-jest": "^24.3.5",
    "eslint-plugin-jest-formatting": "^2.0.1",
    "eslint-plugin-prettier": "^3.4.0",
    "prettier": "^2.2.1",
    "prettier-eslint": "^12.0.0"
  },
  "author": "City of Portland",
  "dependencies": {
    "@percy/cli": "^1.0.0-beta.48",
    "@percy/puppeteer": "^2.0.0",
    "jest": "^26.6.3",
    "puppeteer": "^9.0.0"
  }
}
