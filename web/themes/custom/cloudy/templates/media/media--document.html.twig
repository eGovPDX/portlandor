{#
/**
 * @file
 * Theme override to display a media item.
 *
 * Available variables:
 * - name: Name of the media.
 * - content: Media content.
 *embed
 * @see template_preprocess_media()
 *
 * @ingroup themeable
 */
#}
{% embed 'media.html.twig' with {
  'margin' : '0'
}%}
  {%
    set classes = classes|default([
      'media',
      'media--type-' ~ media.bundle()|clean_class,
      view_mode ? 'media--view-mode-' ~ view_mode|clean_class,
    ])
  %}
  {% if content.field_is_accessible['#items'].0.value == 1 %}
    {% set classes = classes|merge(['skip-editoria11y-check']) %}
  {% endif %}
  {% block status %}
    {% set badge_classes = badge_classes|merge(['d-inline-block', 'me-2']) %}
    {{ parent() }}
  {% endblock %}
  {% block content %}
    {% apply spaceless %}
      {% if content.field_preview_image %}
        {{ content.field_preview_image }}
      {% endif %}
      {% if content.field_efiles_link['#object'] %}
        {{ content.field_efiles_link }}
      {% elseif content.field_document %}
        {{ content.field_document }}
      {% endif %}
      {{ content|without(
        'field_document',
        'field_efiles_link',
        'field_preview_image',
        'field_is_accessible'
        ) }}
    {% endapply %}
  {% endblock %}
{% endembed %}
