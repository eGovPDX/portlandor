{% embed '@components/tile/tile.twig'
  with {
    item_alignment: 'center',
    url: url,
    image: content.field_person_image,
    title: content.field_name,
    text: content.field_official_title
  }
%}
  {% block content %}
    {{ parent() }}
    {% include '@elements/icon/fa.twig' with {
      name: 'angle-right',
      classes: ['d-md-none', 'me-0', 'ms-auto', 'align-self-center', 'text-muted']
    } only %}
  {% endblock %}
{% endembed %}
