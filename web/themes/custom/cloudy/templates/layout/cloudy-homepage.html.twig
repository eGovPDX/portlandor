{#
/**
 * @file
 * Cloudy layout
 *
 *
 * Available region variables:
 * - search
 * - popular
 * - terms
 *
 */
#}
<div class="cloudy-homepage">
    <div class="search-region-container">
        <div class="home-search-region container">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="title homepage-title">Welcome to Portland, Oregon</h1>
                </div>
                <div class="col-lg-6 col-md-12">
                    {{ content.search }}
                </div>
            </div>
            <div class="row">    
                <div class="col-lg-7 col-md-12">
                    <div class="popular">
                        {{ content.popular }}
                    </div>
                </div>
            </div>    
        </div>
    </div>
    <div class="home-terms container">
        {{ content.terms }} 
    </div>
  </div>