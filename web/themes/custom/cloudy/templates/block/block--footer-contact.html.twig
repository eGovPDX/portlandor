{% set email = content.field_contact.0['#options']['entity'].field_email.0.value %}
{% set phone = content.field_contact.0['#options']['entity'].field_phone.0.value %}
{% set tty = content.field_contact.0['#options']['entity'].field_tty.0.value %}
{% set oregon_relay = content.field_contact.0['#options']['entity'].field_oregon_relay.0.value %}

{% embed "block.html.twig" with {
  title_classes: [
    'h6'
  ],
  block_classes: [
    'mb-6',
    'mb-md-8',
    'mb-lg-0',
  ]
} %}
  {% block content %}
    {% if email %}
      {% include "@components/link/link.twig" with {
        classes: [
          'd-block',
          'mt-4',
        ],
        standalone: false,
        background: false,
        icon: {
          name: 'email',
        },
        text: email,
        url: 'mailto:' ~ email,
      } %}
    {% endif %}
    {% if phone %}
      {% include "@components/link/link.twig" with {
        classes: [
          'd-block',
          'mt-4',
        ],
        standalone: false,
        background: false,
        icon: {
          name: 'phone',
        },
        text: phone,
        url: 'tel:' ~ phone,
      } %}
    {% endif %}
    {% if tty %}
      {% include "@components/link/link.twig" with {
        classes: [
          'd-block',
          'mt-4',
        ],
        standalone: false,
        background: false,
        icon: {
          name: 'tty',
        },
        text: tty,
        url: 'tel:' ~ tty,
      } %}
    {% endif %}
    {% if oregon_relay %}
      {% include "@components/link/link.twig" with {
        classes: [
          'd-block',
          'mt-4',
        ],
        standalone: false,
        background: false,
        icon: {
          name: 'oregon-relay',
        },
        text: '711',
        url: 'tel:711',
      } %}
    {% endif %}
  {% endblock %}
{% endembed %}
