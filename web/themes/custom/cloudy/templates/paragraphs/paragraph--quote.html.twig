{% extends 'paragraph.html.twig' %}
{% block content %}
<blockquote class="blockquote">
  {{ paragraph.field_quoted_text|view }}
  {% if paragraph.field_attribution is not empty or paragraph.field_citation is not empty %}
  <footer class="blockquote-footer">
    {{ paragraph.field_attribution.value }}
    {% if paragraph.field_citation %}
      in <cite title="Source Title">{{ paragraph.field_citation.value }}</cite>
    {% endif %}
  </footer>
  {% endif %}
</blockquote>
{% endblock %}