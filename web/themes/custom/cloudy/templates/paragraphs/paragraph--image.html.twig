{% extends 'paragraph.html.twig' %}
{% block content %}
{% if content.field_image.0 %}
  <figure class="figure">
    {% if (content.field_image.0['#media'].isPublished() is same as(FALSE)) %}
      <span class="badge bg-danger image-unpublished">Unpublished</span>
    {% endif %}
    {{ content }}
    <figcaption class="figure-caption text-center">
      {{ paragraph.field_caption.value }}
    </figcaption>
  </figure>
{% endif %}
{% endblock %}
