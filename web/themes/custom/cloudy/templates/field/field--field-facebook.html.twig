{% embed 'field.html.twig' with {
  'margin' : '4'
  } %}
  {% spaceless %}
    {% block content %}
      {%- for item in items if item.content|render|striptags|trim is not empty -%}
        {% set username = item.content["#context"].value %}
        <a href="http://facebook.com/{{ username }}">
          {% include '@elements/icon/icon.twig' with {
            name: 'facebook'
          } only %}
          {{ username }}
        </a>
      {%- endfor -%}
    {% endblock %}
  {% endspaceless %}
{% endembed %}
