{% embed 'field.html.twig' with {
  'margin' : '2',
  } %}
  {% block content %}
    {% apply spaceless %}
      {% for item in items %}
        {% if item.content|render|striptags|trim is not empty %}
        {% set username = item.content["#context"].value %}
        <a href="https://www.facebook.com/{{ username }}">
          {% include '@components/icon/icon.twig' with {
            name: 'facebook',
            size: 'xs'
          } only %}{{ username }}
        </a>
        {% endif %}
      {% endfor %}
    {% endapply %}
  {% endblock %}
{% endembed %}
