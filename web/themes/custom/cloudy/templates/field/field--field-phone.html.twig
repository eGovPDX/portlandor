{% embed 'field.html.twig' with {
  'margin' : '2'
  } %}
  {% block content %}
    {% apply spaceless %}
      {%- for item in items -%}
        {% if item.content|render|striptags|trim is not empty %}
        {% set phone = item.content['#title'] %}
        <a href="tel:+1{{ phone | trim }}">
          {% include '@components/icon/icon.twig' with {
            name: 'phone',
            size: 'xs',
          } only %}{{ phone }}
        </a>
        {% endif %}
      {%- endfor -%}
    {% endapply %}
  {% endblock %}
{% endembed %}
