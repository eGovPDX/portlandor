{% embed 'field.html.twig' with {
    'margin' : '0',
    'item_classes': [
      'ms-2',
    ]
  } %}
  {% block content %}
    {% apply spaceless %}
      {%- for item in items -%}
        {% if item.content|render|striptags|trim is not empty %}
        <span{{item.attributes.addClass(item_classes)}}>
          {{ item.content['#markup']|format_size }}
        </span>
        {% endif %}
      {%- endfor -%}
    {% endapply %}
  {% endblock %}
{% endembed %}
