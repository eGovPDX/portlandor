<div class="row">
  <div class="cloudy-content col-lg-8 col-md-12">
    <article{{ attributes }}>
      {{ node.field_page_type.entity.label }}
      {{ content.field_featured_media }}
      <p class="cloudy-lead-text">
        {{ content.field_summary.0 }}
      </p>
      <div{{ content_attributes.addClass('node__content', 'clearfix') }}>
        {{ content|without('field_summary','field_featured_media','field_contact','field_location','field_related_content','field_topics') }}
      </div>
    </article>
  </div>
  <div class="cloudy-side col-lg-4 col-md-12">
    {% set view_parent = drupal_view_result('page_menu','block_parent_to_pages_menu')|length %}
    {% if view_parent > 0 %}
      {{ drupal_view('page_menu','block_parent_to_pages_menu') }}
    {% endif %}
    {% set view_page = drupal_view_result('page_menu','block_siblings_to_parent_menu')|length %}
    {% if view_page > 0 %}
      {{ drupal_view('page_menu','block_siblings_to_parent_menu') }}
    {% endif %}
    {{ content.field_contact }}
    {{ content.field_location }}
    {{ content.field_related_content }}
    {{ content.field_topics }}
    {% set view_news = drupal_block('views_block:news_on_content-block_2')|length %}
    {% if view_news > 0 %}
      {{ drupal_block('views_block:news_on_content-block_2') }}
    {% endif %}
    {% set view_events = drupal_block('views_block:events_on_content-block_1')|length %}
    {% if view_events > 0 %}
      {{ drupal_block('views_block:events_on_content-block_1') }}
    {% endif %}
    {% set view_past_events = drupal_block('views_block:events_on_content-block_past_events')|length %}
    {% if view_past_events > 0 %}
      {{ drupal_block('views_block:events_on_content-block_past_events') }}
    {% endif %}
  </div>
</div>
