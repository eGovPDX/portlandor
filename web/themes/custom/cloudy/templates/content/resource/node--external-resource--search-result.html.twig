{% if content.field_popular[0]['#markup'] == 'On' %}
  {% set popular %}
    {% include '@components/badge/badge.twig' with {
      text: 'popular'|t|capitalize,
    } only %}
  {% endset %}
{% endif %}


{% include '@components/morsel/morsel.twig' with {
  is_draft: node.isPublished() ? false : true,
  layout_mt: 8,
  layout_mb: 8,
  heading: {
    url: url,
    text: label,
    level: 2,
    style_override: 3
  },
  image: content.field_featured_media|render,
  text: content.field_summary,
  items: [popular, content.field_external_resource_type]
} %}
