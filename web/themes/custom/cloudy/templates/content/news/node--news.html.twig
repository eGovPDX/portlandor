<div class="row">
  <div class="cloudy-content col-lg-8 col-md-12">
    <article {{ attributes }}>
      {{ content.field_news_type }}
      {{ content.field_public_notice_type }}
      {{ content.field_featured_media }}
      {{ content.field_summary }}
      <div class="mt-8 mb-8">
        {{ content.field_published_on }}
        {% if node.field_updated_on[0].value > node.field_published_on[0].value %}
          {{ content.field_updated_on }}
        {% endif %}
      </div>
      {# {{ drupal_block('views_block:content_translations-block_content_language_switcher') }} #}
      {{ drupal_entity('block', 'views_block__content_translations_block_content_language_switch', check_access=false) }}
      <div {{ content_attributes.addClass('node__content', 'clearfix') }}>
        {{
          content|without(
            'field_summary',
            'field_news_type',
            'field_public_notice_type',
            'field_featured_media',
            'field_published_on',
            'field_updated_on',
            'field_contact',
            'field_location',
            'field_related_content',
            'field_topics',
            'field_display_groups',
            'field_neighborhood'
          )
        }}
      </div>
    </article>
  </div>
  <div class="cloudy-side col-lg-4 col-md-12">
    {{ content.field_contact }}
    {{ content.field_location }}
    {{ content.field_related_content }}
    {{ content.field_topics }}
    {{ content.field_neighborhood }}
    {% set view_related_events = drupal_block('views_block:related_events_and_news-related_events') %}
    {% if view_related_events|length > 0 %}
      {{ view_related_events }}
    {% endif %}
    {% set view_translations = drupal_block('views_block:content_translations-block_language_switcher') %}
    {% if view_translations|length > 0 %}
      {{ view_translations }}
    {% endif %}
  </div>
</div>
