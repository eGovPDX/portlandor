<div class="row">
  <div class="col-lg-8 col-md-12">
    <article{{ attributes }}>
      {{ content.field_event_type }}
      {{ content.field_event_status }}
      <p class="lead">
        {{ content.field_summary.0 }}
      </p>
      {{ content.field_featured_media }}
      <div class="row">
        <div class="col">
          <div class="event__date">
            {% if content.field_end_date|render|striptags|trim is not empty %}
              {{ content.field_start_date.0 }}
              <span aria-label="{{ 'through'|t }}"> &ndash; </span>
              {{ content.field_end_date.0 }}
            {% else %}
              {{ content.field_start_date.0 }}
            {% endif %}
          </div>
          <div class="event_time">
              {% if content.field_all_day|render|striptags|trim is not empty %}
                {{ content.all_day }}
              {% elseif content.field_end_time|render|striptags|trim is not empty %}
                {{ content.field_start_time.0 }}
                <span aria-label="{{ 'to'|t }}"> &ndash; </span>
                {{ content.field_end_time.0 }}
              {% else %}
                {{ content.field_start_time.0 }}
              {% endif %}
          </div>
        </div>
        {% if content.field_location %}
        <div class="col-md-6 col-sm-12">
          {{ content.field_location }}
        </div>
        {% endif %}
      </div>
      <div{{ content_attributes.addClass('node__content', 'clearfix') }}>
        {{ content|without('field_summary','field_event_type','field_event_status','field_featured_media','field_start_date','field_end_date','field_all_day','field_start_time','field_end_time','field_location','field_contact','field_related_content','field_topics','field_display_groups','field_neighborhood') }}
      </div>
    </article>
  </div>
  <div class="cloudy-side col-lg-4 col-md-12">
    {{ content.field_contact }}
    {{ content.field_related_content }}
    {{ content.field_topics }}
    {{ content.field_neighborhood }}
    {% set view_news = drupal_block('views_block:news_on_content-block_2')|length %}
    {% if view_news > 0 %}
      {{ drupal_block('views_block:news_on_content-block_2') }}
    {% endif %}
    {% set view_events = drupal_block('views_block:events_on_content-block_1')|length %}
    {% if view_events > 0 %}
      {{ drupal_block('views_block:events_on_content-block_1') }}
    {% endif %}
  </div>
</div>
