{# Template for Featured Events #}
<div class="row mb-4 mx-4 pb-2 border-bottom border-bottom-light">
  <div class="col pl-0 order-2 order-md-1">
    <h3 class="h4"><a href="{{ url }}">{{ label }}</a></h3>
    <p>{{ content.field_summary.0 }}</p>
    <div class="d-flex flex-wrap">
      <span class="pr-2">{{ content.group_date }}</span>
      {% if content.group_time|render|striptags %}
        <span class="pr-2">{{ content.group_time }}</span>
      {% endif %}
      {% if content.field_event_type|render|striptags %}
       <span class="pr-2">{{ content.field_event_type.0 }}</span>
      {% endif %}
      {% if content.field_event_status|render|striptags %}
        <span class="pr-2">{{ content.field_event_status }}</span>
      {% endif %}
      {% if content.field_is_online|render|striptags %}
       <span>{{ content.field_is_online }}</span>
      {% endif %}
    </div>
  </div>
  {% if content.field_featured_media.0 %}
    <div class="col-12 col-md-6 px-0 pl-md-4 order-1 order-md-2 d-flex align-items-center">
      {{ content.field_featured_media.0 }}
    </div>
  {% endif %}
</div>
