<div class="row">
  <div class="col-lg-6 col-md-12">
    <article{{ attributes }}>
      <div{{ content_attributes.addClass('node__content', 'clearfix') }}>
        {% if node.field_emergency_closure.value == 1 %}
          <div class="location--closure"><span class="badge badge-danger">Emergency Closure</span> <a href="/emergency-closures">More information about this emergency closure</a></div>
        {% endif %}
        {{ content|without('field_geolocation','field_emergency_closure') }}
        {% set view_service_locations = drupal_block('views_block:services_and_pages_on_location-block_service_locations_at_location')|length %}
        {% if view_service_locations > 0 %}
          {{ drupal_block('views_block:services_and_pages_on_location-block_service_locations_at_location') }}
        {% endif %}
        {% set view_news = drupal_block('views_block:events_on_content-block_2')|length %}
        {% if view_news > 0 %}
          {{ drupal_block('views_block:events_on_content-block_2') }}
        {% endif %}
      </div>
    </article>
  </div>
  <div class="col-lg-6 col-md-12">
    {% set view_services = drupal_block('views_block:services_and_pages_on_location-block_services_at_location')|length %}
    {% if view_services > 0 %}
      {{ drupal_block('views_block:services_and_pages_on_location-block_services_at_location') }}
    {% endif %}
    {% set view_related = drupal_block('views_block:services_and_pages_on_location-block_pages_on_location')|length %}
    {% if view_related > 0 %}
      {{ drupal_block('views_block:services_and_pages_on_location-block_pages_on_location') }}
    {% endif %}
    {% set view_news = drupal_block('views_block:news_on_content-block_1')|length %}
    {% if view_news > 0 %}
      {{ drupal_block('views_block:news_on_content-block_1') }}
    {% endif %}
    {% set view_events = drupal_block('views_block:events_on_content-block_2')|length %}
    {% if view_events > 0 %}
      {{ drupal_block('views_block:events_on_content-block_2') }}
    {% endif %}
  </div>
</div>
