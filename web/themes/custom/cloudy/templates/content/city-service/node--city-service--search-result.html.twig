{% set service_label %}
  {% include '@components/badge/badge.twig' with {
    text: node.type.entity.label,
    mb: 2
  } only %}
{% endset %}

{% include '@components/morsel/morsel.twig'
  with {
    is_draft: node.isPublished() ? false : true,
    layout_mt: 8,
    layout_mb: 8,
    heading: {
      url: url,
      text: label,
      level: 2,
      style_override: 3
    },
    text: content.field_summary,
    image: content.field_featured_media|render,
    items: [content.field_popular, { '#markup': service_label }],
  }
%}
