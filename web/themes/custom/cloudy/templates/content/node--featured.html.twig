{% set is_draft = node.isPublished() ? false : true %}
{% set title = label %}
<div class="col mb-10">
  <div class="card h-100">
      <div class="card-img-top overflow-hidden">
        {{ content.field_featured_media }}
      </div>
      <div class="card-body">
        {% if is_draft %}
          {% include '@components/badge/badge.twig' with {
            text: 'unpublished'|t|capitalize,
            type: 'danger',
            mb: 2
          } only %}
        {% endif %}
        <h3 class="card-title h4 mb-0 text-primary"><a href="{{ url }}" class="stretched-link">{{ label }}</a></h3>
        <p class="card-text">
          {{ content|without('field_menu_link_text','field_featured_media') }}
        </p>
      </div>
  </div>
</div>
