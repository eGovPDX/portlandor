{% apply spaceless %}
{# `name` can be either `fa-arrow-down` or `arrow-down` and it'll work #}
{% set iconClass = name starts with 'fa-' ? name : 'fa-' ~ name %}
{% set classes = classes|default([])|merge([
    'fas',
    iconClass
  ])
%}
<i class="{{ classes|join(' ')|trim }}"></i>
{% endapply %}
