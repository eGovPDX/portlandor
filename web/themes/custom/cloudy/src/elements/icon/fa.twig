{# `name` can be either `fa-arrow-down` or `arrow-down` and it'll work #}
{% set iconClass = name starts with 'fa-' ? name : 'fa-' ~ name %}
{% set ariaHidden = ariaHidden|default('true') %}
{% set classes = [brand ? 'fab' : 'fas', iconClass] %}

<i class="{{ classes|join(' ') }}" aria-hidden="{{ ariaHidden }}"></i>
