<div class="search-result">
  <div class="search-result__body">
    {% if is_not_published %}
      {# @todo replace the below badge usage with the cloudy baddge component once available#}
      <span class="badge badge-danger">{{ 'unpublished'|t|capitalize }}</span>
    {% endif %}
    {# @todo replace the below badge usage with the cloudy baddge component once available#}
    <div class="badge badge-pill badge-light">{{ bundle }}</div>
    <h2><a href="{{ url }}">{{ title }}</a></h2>
    {% if posted_on %}
      <div class="search-result__posted-on">
        <div class="sr-only">Posted on</div>
        <time datetime="{{ posted_on }}">{{ posted_on }}</time>
      </div>
    {% endif %}
    {% if date_start %}
      <div class="search-result__dates">
        {# @todo replace the below icon usage with the cloudy icon component once available#}
        <i class="fas fa-calendar"></i>
        <time datetime="{{ date_start }}">{{ date_start }}</time>
        {% if date_end %}
          <span aria-label="through"> â€“ </span>
          <time datetime="{{ date_end }}">{{ date_end }}</time>
        {% endif %}
      </div>
    {% endif %}
    {% if text %}
      <p class="search-result__text">{{ text }}</p>
    {% endif %}
  </div>
</div>
