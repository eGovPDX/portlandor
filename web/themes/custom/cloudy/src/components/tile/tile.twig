{% set item_classes =
  item_classes
    |default([])
    |merge(
      [
        'tile',
        'd-flex',
        item_alignment ? 'align-items-' ~ item_alignment,
        'text-decoration-none',
        'p-4',
        'flex-grow-1'
      ]
    )
%}

{% set content_classes = content_classes|default(['d-flex', 'flex-column']) %}

<a href="{{ url }}" class="{{ item_classes|join(' ')|trim }}">
  {% if image %}
    <div class="mr-4">
      {{ image }}
    </div>
  {% endif %}
  {% block content %}
    <div class="{{ content_classes|join(' ') }}">
      <span class="h5 mb-0">{{ title }}</span>
      <span class="text-dark">{{ text }}</span>
    </div>
  {% endblock %}
</a>
