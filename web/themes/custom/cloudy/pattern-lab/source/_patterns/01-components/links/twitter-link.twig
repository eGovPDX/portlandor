{% set icon %}
  {% include "@elements/icons/twitter.twig" with {
    "classes": [
      "h-6",
      "w-6"
    ]
  } only %}
{% endset %}
{% set username = username|default("username") %}
{% set url = "https://www.twitter.com/" ~ username %}
{% include "@components/links/_icon-link.twig" with {
  "icon": icon,
  "text": username,
  "url": url
} %}
