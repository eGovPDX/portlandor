{% set icon %}
  {% include "@elements/icons/email.twig" with {
    "classes": [
      "h-6",
      "w-6"
    ]
  } only %}
{% endset %}
{% set email = email|default("name@email.com") %}
{% set url = "mailto:" ~ email %}
{% include "@components/links/_icon-link.twig" with {
  "icon": icon,
  "url": url,
  "text": email
} only %}
