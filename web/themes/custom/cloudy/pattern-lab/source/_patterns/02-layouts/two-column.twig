{% set left_classes = left_classes|default([
  "md:w-3/4",
  "my-2",
  "px-2",
]) %}
{% set right_classes = right_classes|default([
  "md:w-1/4",
  "my-2",
  "px-2",
]) %}
{% set row_classes = row_classes|default([
  "flex-col",
  "md:flex-row",
  "-mx-2"
]) %}
{% set left_content %}
  {% block left %}
    {% include "@utilities/_placeholder.twig" with {
      "placeholder": {
        "text": "left"
      }
    } %}
  {% endblock %}
{% endset %}
{% set right_content %}
  {% block right %}
    {% include "@utilities/_placeholder.twig" with {
      "placeholder": {
        "text": "right"
      }
    } %}
  {% endblock %}
{% endset %}
{% set row_content %}
  {% embed "@layouts/_column.twig" with {
    "wrapper_element": "div",
    "wrapper_classes": left_classes
  } %}
    {% block content %}
      {{ left_content }}
    {% endblock %}
  {% endembed %}
  {% embed "@layouts/_column.twig" with {
    "wrapper_element": "aside",
    "wrapper_classes": right_classes
  } %}
    {% block content %}
      {{ right_content}}
    {% endblock %}
  {% endembed %}
{% endset %}
{% embed "@layouts/_row.twig" with {
  "wrapper_classes": row_classes
} %}
  {% block content %}
    {{ row_content }}
  {% endblock %}
{% endembed %}
