{% set center_classes = center_classes|default([
  "w-full",
  "my-2",
  "px-2",
]) %}
{% set row_classes = row_classes|default([
  "-mx-2"
]) %}
{% set center_content %}
  {% block center %}
    {% include "@utilities/_placeholder.twig" with {
      "placeholder": {
        "text": "center"
      }
    } %}
  {% endblock %}
{% endset %}
{% set row_content %}
  {% embed "@layouts/_column.twig" with {
    "wrapper_element": "div",
    "wrapper_classes": center_classes
  } %}
    {% block content %}
      {{ center_content }}
    {% endblock %}
  {% endembed %}
{% endset %}
{% embed "@layouts/_row.twig" with {
  "wrapper_classes": row_classes
} %}
  {% block content %}
    {{ row_content }}
  {% endblock %}
{% endembed %}
