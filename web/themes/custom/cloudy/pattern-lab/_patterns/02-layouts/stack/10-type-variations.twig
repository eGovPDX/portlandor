{% set types = ['default', 'stack'] %}

{% set myArray = [
  '<div class="border bg-light p-2" style="width: 120px;height: 120px;">1</div>',
  '<div class="border bg-light p-2" style="width: 120px;height: 120px;">2</div>',
  '<div class="border bg-light p-2" style="width: 120px;height: 120px;">3</div>'
] %}

{% for type in types %}
  <div>
    <h6>
      Type: <code>{{ type }}</code>
    </h6>
    {% include '@layouts/stack/stack.twig' with {
      items: myArray,
      stack: type == 'stack',
      layout_spacing: 4,
      item_spacing: 4
    } %}
  </div>
{% endfor %}
