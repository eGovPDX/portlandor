{
  "name": "cloudy",
  "version": "8.2.0",
  "description": "Simple Boostrap theme with SASS",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "run-p webpack:dev pl:dev --print-label",
    "build:dev": "webpack --mode development",
    "build": "webpack --mode production --no-progress",
    "pl:install": "patternlab install --config patternlab-config.json",
    "pl:dev": "patternlab serve --config patternlab-config.json",
    "build:pl": "patternlab build --config patternlab-config.json",
    "build:pl:full": "npm run clean:pl && npm run build:pl",
    "webpack:dev": "webpack --mode development --watch",
    "webpack:build": "webpack --mode production --no-progress",
    "clean:pl": "rm -rf ../../../pattern-lab",
    "start": "npm rebuild node-sass && npm run build && npm run dev"
  },
  "keywords": [
    "SASS",
    "Bootstrap",
    "Drupal"
  ],
  "author": "@joshuami",
  "license": "MIT",
  "dependencies": {
    "@pattern-lab/cli": "^0.0.3",
    "@pattern-lab/core": "^3.0.1",
    "@pattern-lab/engine-twig-php": "^3.0.1",
    "@pattern-lab/starterkit-twig-demo": "^4.1.1",
    "@pattern-lab/uikit-workshop": "^1.0.1",
    "bootstrap4-chosen": "^1.0.0-alpha.1",
    "portland-pattern-lab": "git+https://github.com/eGovPDX/portland-pattern-lab.git"
  },
  "devDependencies": {
    "@babel/core": "^7.6.4",
    "@fullhuman/postcss-purgecss": "^1.2.0",
    "autoprefixer": "^9.7.0",
    "babel-loader": "^8.0.6",
    "bootstrap": "^4.3",
    "browser-sync": "^2.26.7",
    "browser-sync-webpack-plugin": "^2.2.2",
    "css-loader": "^2.1.1",
    "cssnano": "^4.1.10",
    "globby": "^8.0.1",
    "html-webpack-plugin": "^3.0.6",
    "import-glob-loader": "^1.1.0",
    "jquery": "^3.4.1",
    "mini-css-extract-plugin": "^0.5.0",
    "node-sass": "^4.13.0",
    "npm-run-all": "^4.1.5",
    "popper.js": "^1.16.0",
    "postcss": "^6.0.19",
    "postcss-loader": "^2.1.1",
    "resolve-url-loader": "^3.1.0",
    "sass-loader": "^7.3.1",
    "style-loader": "^0.20.3",
    "tailwindcss": "^1.0.5",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.9",
    "webpack-dev-server": "^3.9.0"
  }
}
