{
  "name": "cloudy",
  "version": "8.2.0",
  "description": "Simple Boostrap theme with SASS",
  "main": "index.js",
  "scripts": {
    "build": "npm-run-all --serial --print-label build:icon-data build:pl:full build:font-awesome build:wp ",
    "build:icon-data": "node ./scripts/build-icon-list.js",
    "build:pl": "patternlab build --config patternlab-config.json",
    "build:pl:full": "npm run clean:pl && npm run build:pl",
    "build:wp": "NODE_ENV=production webpack --no-progress",
    "build:font-awesome": "mkdir -p dist/font-awesome && cp -r node_modules/@fortawesome/fontawesome-free/css node_modules/@fortawesome/fontawesome-free/webfonts dist/font-awesome",
    "clean": "npm-run-all --parallel --print-label clean:*",
    "clean:pl": "rm -rf ../../../pattern-lab",
    "clean:wp": "rm -rf dist",
    "clean:migration1557": "rm -rf css js dist-cloudy dist-pl source",

    "lint": "npm-run-all --parallel --continue-on-error --print-label lint:js lint:css",
    "lint:css": "stylelint ./**/*.scss",
    "lint:css:fix": "stylelint ./src/**/*.scss --fix",
    "lint:fix": "npm-run-all --sequential --continue-on-error --print-label lint:js:fix lint:css:fix",
    "lint:js": "eslint ./src --config ./.eslintrc.json",
    "lint:js:fix": "eslint ./src --config ./.eslintrc.json --fix",
    "new": "plop --plopfile ./scripts/plopfile.js --cwd ./scripts",
    "start": "npm run build:icon-data && npm-run-all --parallel --print-label watch:*",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "npm-run-all --parallel --print-label watch:*",
    "watch:pl": "nodemon --ext twig,json --watch pattern-lab --watch src --exec 'npm run build:pl:full' ",
    "watch:wp": "webpack-cli --config ./webpack.config.js --watch --hide-modules --display minimal"
  },
  "keywords": [
    "SASS",
    "Bootstrap",
    "Drupal"
  ],
  "author": "@joshuami",
  "license": "MIT",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.12.0",
    "@pattern-lab/cli": "^0.0.3",
    "@pattern-lab/core": "^3.0.5",
    "@pattern-lab/engine-twig-php": "^3.0.6",
    "@pattern-lab/starterkit-twig-demo": "^4.1.1",
    "@pattern-lab/uikit-workshop": "^1.0.8",
    "bootstrap4-chosen": "^1.0.0-alpha.1",
    "js-yaml": "^3.13.1"
  },
  "devDependencies": {
    "@babel/core": "^7.7.5",
    "@babel/preset-env": "^7.7.6",
    "@fullhuman/postcss-purgecss": "^1.2.0",
    "autoprefixer": "^9.7.3",
    "babel-loader": "^8.0.6",
    "bootstrap": "^4.4.1",
    "browser-sync": "^2.26.7",
    "browser-sync-webpack-plugin": "^2.2.2",
    "css-loader": "^2.1.1",
    "cssnano": "^4.1.10",
    "eslint": "^6.7.1",
    "globby": "^8.0.1",
    "html-webpack-plugin": "^3.0.6",
    "import-glob-loader": "^1.1.0",
    "jquery": "^3.4.1",
    "mini-css-extract-plugin": "^0.5.0",
    "node-sass": "^4.13.0",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "plop": "^2.5.3",
    "popper.js": "^1.16.0",
    "postcss": "^6.0.19",
    "postcss-loader": "^2.1.1",
    "prettier": "^1.14.0",
    "resolve-url-loader": "^3.1.1",
    "sass-loader": "^7.3.1",
    "style-loader": "^0.20.3",
    "stylelint": "^12.0.0",
    "stylelint-config-standard": "^19.0.0",
    "tailwindcss": "^1.1.4",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.9",
    "webpack-dev-server": "^3.9.0"
  }
}
