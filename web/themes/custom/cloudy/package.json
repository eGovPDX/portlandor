{
  "name": "cloudy",
  "version": "8.2.0",
  "description": "Simple Boostrap theme with SASS",
  "main": "index.js",
  "scripts": {
    "build": "yarn run prep && npm-run-all --parallel --print-label build:pl build:wp",
    "build:ci": "yarn run prep && npm-run-all --parallel --print-label build:pl:ci build:wp",
    "build:icon-data": "node ./scripts/build-icon-list.js",
    "build:pl": "patternlab build --config patternlab-config.json",
    "build:pl:full": "yarn run clean:pl && yarn run build:pl",
    "build:pl:ci": "timeout 50s yarn run build:pl || timeout 50s yarn run build:pl || timeout 50s yarn run build:pl || exit 1",
    "build:tokens": "style-dictionary build --config ./style-dictionary.config.js",
    "build:wp": "NODE_ENV=production webpack --no-progress",
    "build:font-awesome": "mkdir -p dist/font-awesome && cp -r node_modules/@fortawesome/fontawesome-free/css node_modules/@fortawesome/fontawesome-free/webfonts dist/font-awesome",
    "clean": "npm-run-all --parallel --print-label clean:*",
    "clean:pl": "rm -rf ../../../pattern-lab",
    "clean:wp": "rm -rf dist",
    "clean:migration1557": "rm -rf css js dist-cloudy dist-pl source",
    "lint": "npm-run-all --parallel --continue-on-error --print-label lint:js lint:css",
    "lint:css": "stylelint ./**/*.scss",
    "lint:css:fix": "stylelint ./src/**/*.scss --fix",
    "lint:fix": "npm-run-all --sequential --continue-on-error --print-label lint:js:fix lint:css:fix",
    "lint:js": "eslint ./src --config ./.eslintrc.json",
    "lint:js:fix": "eslint ./src --config ./.eslintrc.json --fix",
    "new": "plop --plopfile ./scripts/plopfile.js --cwd ./scripts",
    "prep": "npm-run-all --parallel --print-label build:tokens build:icon-data build:font-awesome",
    "start": "yarn run prep && npm-run-all --parallel --print-label watch:*",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "npm-run-all --parallel --print-label watch:*",
    "watch:pl-external": "nodemon --ext twig --watch src --exec 'yarn run build:pl:full' ",
    "watch:pl-internal": "nodemon --ext twig,json --watch pattern-lab --exec 'yarn run build:pl' ",
    "watch:tokens": "nodemon --watch ./src/design-tokens --ignore ./src/design-tokens/dist --exec 'yarn run build:tokens'",
    "watch:wp": "webpack --config ./webpack.config.js --watch"
  },
  "keywords": [
    "SASS",
    "Bootstrap",
    "Drupal"
  ],
  "license": "MIT",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.12.0",
    "@pattern-lab/cli": "^5.4.0",
    "@pattern-lab/core": "^5.4.0",
    "@pattern-lab/engine-twig-php": "^5.7.1",
    "@pattern-lab/uikit-workshop": "git+https://github.com/eGovPDX/pattern-lab-uikit-workshop",
    "bootstrap4-chosen": "^1.0.0-alpha.1",
    "js-yaml": "^3.13.1",
    "style-dictionary": "^2.8.3"
  },
  "devDependencies": {
    "@babel/core": "^7.7.5",
    "@babel/preset-env": "^7.7.6",
    "autoprefixer": "^9.7.3",
    "babel-loader": "^8.0.6",
    "bootstrap": "^4.4.1",
    "css-loader": "^2.1.1",
    "cssnano": "^4.1.10",
    "eslint": "^6.7.1",
    "import-glob-loader": "^1.1.0",
    "mini-css-extract-plugin": "^0.5.0",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "plop": "^2.5.3",
    "popper.js": "^1.16.0",
    "postcss": "^6.0.19",
    "postcss-loader": "^2.1.1",
    "prettier": "^1.14.0",
    "resolve-url-loader": "^3.1.1",
    "sass": "^1.26.3",
    "sass-loader": "^7.3.1",
    "stylelint": "^12.0.0",
    "stylelint-config-standard": "^19.0.0",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.9"
  }
}
