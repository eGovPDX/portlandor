<?php

function portland_glossary_page_attachments(array &$attachments)
{
    if (\Drupal::routeMatch()->getRouteName() === 'entity.node.canonical') {
        $attachments['#attached']['library'][] = 'portland_glossary/glossary_term';
        $attachments['#attached']['library'][] = 'portland_glossary/popperjs';
    }
}
