{#
/**
 * @file
 * Portland content completion custom block.
 */
#}
  {%
    set classes = [
      'content-completion-block',
      'message'
    ]
  %}

  <div {{attributes.addClass(classes)}}>
    <table>
      <thead>
        <tr>
          <th>Group Name</th>
          <th>Parent Group</th>
          <th>Total</th>
          <th>Published</th>
          <th>% Published</th>
        </tr>
      </thead>
      <tbody>
        {% for row in completion_table %}
        <tr>
          <td><a href="/group/{{ row.id }}">{{ row.label }}</a></td>
          <td><a href="/group/{{ row.ParentId }}">{{ row.Parent }}</a></td>
          <td>{{ row.Total }}</td>
          <td>{{ row.Published }}</td>
          <td>{% if row.Total > 0 %}{{ row.Complete }}%{% endif %}</td>
        </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
