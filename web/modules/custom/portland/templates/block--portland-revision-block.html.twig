{#
/**
 * @file
 * Profile Portland revision custom block.
 */
#}
{% if current_revision_state %}
  <div class="portland-revision--block message message-{{ alert_color }} d-flex align-items-center">
    <span class="fas fa-md fa-{{ alert_icon }} fa-fw"></span>
    <span class="message__heading">{{ current_revision_state }} <a href="https://employees.portland.gov/web-support/workflows">More about workflows</a></span>
    <div class="ms-auto"><a href="{{ revision_link }}">{{ revision_link_text }}</a></div>

    {% if rabbithole_action %}
      <br>
      <span class="fas fa-md fa-directions fa-fw"></span>
      <span class="message__heading">Redirected</span> to
      {% if rabbithole_action == 'URL' %}
        <a href="{{rabbithole_redirect}}">{{rabbithole_redirect}}</a>.
      {% else %}
        {{rabbithole_action}}.
      {% endif %}
      To remove, <a href="/feedback">contact support</a>.
    {% endif %}
  </div>
{% endif %}
