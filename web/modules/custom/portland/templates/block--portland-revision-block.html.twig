{#
/**
 * @file
 * Profile Portland revision custom block.
 */
#}
{% if current_revision_state %}
  <div class="portland-revision--block message message-{{ alert_color }} d-flex flex-column">
    <div class="d-flex align-items-center">
      <i class="fas fa-md fa-{{ alert_icon }} fa-fw"></i>
      <span class="message__heading">{{ current_revision_state }} <a href="https://employees.portland.gov/web-support/workflows">More about workflows</a></span>
      {% if revision_link %}
      <a class="ms-auto text-align-right" href="{{ revision_link }}">{{ revision_link_text }}</a>
      {% endif %}
    </div>

    {% if rabbithole_action %}
      <div class="d-flex align-items-center mt-2">
        <i class="fas fa-md fa-directions fa-fw"></i>
        <span class="message__heading"><strong>Redirected</strong> to
        {% if rabbithole_action == 'URL' %}
          <a href="{{ rabbithole_redirect }}">{{ rabbithole_redirect }}</a>.
        {% else %}
          {{ rabbithole_action }}.
        {% endif %}
        To remove, <a href="/feedback">contact support</a>.</span>
      </div>
    {% endif %}
  </div>
{% endif %}
