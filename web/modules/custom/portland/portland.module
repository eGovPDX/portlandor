//Idea borrowed from https://julian.pustkuchen.com/node/659
function portland_form_views_exposed_form_alter(&$form, &$form_state) {
    // ------------------------------------------------------------
    // Add an own reset button to all views exposed forms. The reason behind is,
    // that the default Drupal reset button doesn't play nice with AJAX
    $submit_btn_id = $form['actions']['submit']['#id'];
    if (!empty($submit_btn_id) && !empty($form['actions']['reset'])) {
      // Add own reset button
      $form['actions']['reset']['#attributes'] = array('onclick' => 'javascript:jQuery(this.form).clearForm();jQuery(this.form).find(\'#' . $submit_btn_id . '\').trigger(\'click\');return false;');
    }
  }

/**
 * Implements hook_inline_entity_form_entity_form_alter().
 */
function portland_inline_entity_form_entity_form_alter(&$entity_form, &$form_state) {
    if ($entity_form['#entity_type'] == 'media') {
        // Show all groups when the user is a site admin.
        // Otherwise only show the groups the current user belongs to.
        $user_roles = \Drupal::currentUser()->getRoles();
        if( !in_array("administrator", $user_roles) ) {
            // GroupMembership[]
            $group_memberships = \Drupal::service('group.membership_loader')->loadByUser();
            $options = [];
            foreach( $group_memberships as $group_membership ) {
                $group = $group_membership->getGroup();
                $options[$group->id->value] = $group->label->value;
            }
            $entity_form["field_group"]["widget"]["#options"] = $options;
        }

        // Set the Group field to the correct default value. Have to use session because the 
        // entity browser is in an iFrame.
        $session = \Drupal::request()->getSession();
        $entity_form["field_group"]["widget"]['#default_value'] = $session->get('parent_group_id');
    }
}

/**
 * Implements hook_form_alter().
 */
function portland_form_alter(&$form, &$form_state, $form_id) {
    // Create new node or edit a node
    $form_array_with_group_field = ['node_event_edit_form', 'node_event_form',
        'node_notification_edit_form', 'node_notification_form',
        'node_news_edit_form', 'node_news_form',
        'node_city_service_edit_form', 'node_city_service_form',
        'node_development_permit_edit_form', 'node_development_permit_form',
        'node_page_edit_form', 'node_page_form',
        'media_image_edit_form', 'media_image_add_form',
        'media_audio_edit_form', 'media_audio_add_form',
        'media_video_edit_form', 'media_video_add_form',
        'media_document_edit_form', 'media_document_add_form'
    ];

    if( in_array($form_id, $form_array_with_group_field) ) {
        // Show all groups when the user is a site admin.
        // Otherwise only show the groups the current user belongs to.
        $user_roles = \Drupal::currentUser()->getRoles();
        if( !in_array("administrator", $user_roles) ) {
            // GroupMembership[]
            $group_memberships = \Drupal::service('group.membership_loader')->loadByUser();
            $options = [];
            foreach( $group_memberships as $group_membership ) {
                $group = $group_membership->getGroup();

                // Only show bureau_office or program groups when creating or editing a service
                if( $form_id == 'node_city_service_edit_form' || $form_id == 'node_city_service_form') {
                    if($group->getGroupType()->id() != 'bureau_office' && $group->getGroupType()->id() != 'program')
                        continue;
                }

                $options[$group->id->value] = $group->label->value;
            }
            $form["field_group"]["widget"]["#options"] = $options;
        }

        // Set the default value as the node's current group       
        $node = $form_state->getFormObject()->getEntity();

        $group_id = NULL;
        if($node->isNew()) {
            if(array_key_exists('group', $form_state->getStorage()) && $form_state->getStorage()['group'] != NULL)
                $group_id = $form_state->getStorage()['group']->id();
        }
        else {
            $groupIDs = getGroupIdsByEntity($node);
            $group_id = (count($groupIDs) > 0) ? $groupIDs[0] : NULL;
        }

        $session = \Drupal::request()->getSession();
        if( array_key_exists('field_group', $form) ) {
            if( $group_id == NULL ) {
                $form["field_group"]["widget"]['#default_value'] = '_none';
                $session->set('parent_group_id', '_none');
            }
            else {
                $form["field_group"]["widget"]['#default_value'] = $group_id; // assume only one parent group
                $session->set('parent_group_id', $group_id);
            }
        }

        $form['actions']['submit']['#submit'][] = 'portland_handle_group_update';
    }
}

function portland_handle_group_update($form, $form_state) {
    $entity = $form_state->getFormObject()->getEntity();

    $bundle_array = ['event', 'notification', 'news', 'city_service', 'page', 
                    'image', 'audio', 'video', 'document'];

    if( in_array($entity->bundle(), $bundle_array) && $entity->hasField('field_group') ) {
        $entityTypeId = $entity->getEntityTypeId();
        $old_entity = ($entity->isNew()) ? NULL : \Drupal::entityTypeManager()->getStorage($entityTypeId)->loadUnchanged($entity->id());

        // The old "Parent Group" field may be empty even though the node is in a group.
        $old_group_id = ($old_entity != NULL && 
                            $old_entity->hasField('field_group') && 
                            $old_entity->field_group->entity != NULL) ? 
            $old_entity->field_group->entity->id() : NULL;

        // Get the parent group ID from the group content table.
        // This is when the content is already in a group but field_group is not updated yet.
        if($old_entity != NULL) {
            $old_group_id_array = getGroupIdsByEntity($old_entity);
            $old_group_id = (count($old_group_id_array) > 0) ? $old_group_id_array[0] : NULL;
        }

        // Get the new parent group ID from the "Parent Group" field
        $new_group_id = ($entity->field_group->entity != NULL) ? $entity->field_group->entity->id() : NULL;

        // Only execute if the new and old groups are different
        if( $old_group_id != $new_group_id ) {
            // Delete from the old group
            if( $old_group_id != NULL ) {
                $group_contents = \Drupal::entityTypeManager()
                                ->getStorage('group_content')
                                ->loadByProperties([ 
                                    'entity_id' => $entity->id(),
                                    'gid' => $old_group_id,
                                ]);
                
                foreach ($group_contents as $item) {
                    $item->delete();
                }
            }

            // Add to the new group
            if( $new_group_id != NULL ) {
                /* 
                This is the case when the user is adding a new enity under a group, 
                but also changing the parent group in the dropdown group list before saving. 
                The new entity has been added to the default group by Group module's submit 
                handler so we have to remove it here. 
                */
                $groupIDs = getGroupIdsByEntity($entity);
                if( count($groupIDs) > 0) {
                    $old_group_id = $groupIDs[0];
                    $group_contents = \Drupal::entityTypeManager()
                        ->getStorage('group_content')
                        ->loadByProperties([ 
                            'entity_id' => $entity->id(),
                            'gid' => $old_group_id,
                    ]);
    
                    foreach ($group_contents as $item) {
                        $item->delete();
                    }                    
                }

                $entity->field_group->entity->addContent($entity, 'group_'.$entity->getEntityTypeId().':'.$entity->bundle());
            }
        }
    }
}

/*
 * Implements hook_preprocess_HOOK().
 */
function portland_preprocess_menu(&$vars)
{
    // find main menu and modify the Alerts link text to display number of alerts,
    // or remove the Alerts item if count is zero.
    if (array_key_exists('menu_name', $vars) && $vars['menu_name'] == 'main') {
        foreach ($vars['items'] as $key => &$item) {
            if ($item['title'] == 'Alerts') {
                $alertCount = _portland_get_active_alerts_count();
                if ($alertCount < 1) {
                    unset($vars['items'][$key]);
                    return;
                }
                $item['title'] = Drupal\Core\Render\Markup::create('Alerts <span class="badge badge-dark">' . $alertCount . '<span>');
                break;
            }
        }
    }
}

/**
 * Implements hook_entity_insert().
 */
function portland_entity_insert($entity)
{
    if ($entity->bundle() == 'alert') {
        // alert has been inserted, update alerts count in cache
        _portland_get_active_alerts_count(true);
    }

    $media_bundles = ['document', 'audio', 'video', 'image'];
    if ( in_array($entity->bundle(), $media_bundles) && 
            $entity->hasField('field_group') &&  
            $entity->field_group->entity != NULL) {
        $entity->field_group->entity->addContent($entity, 'group_'.$entity->getEntityTypeId().':'.$entity->bundle());
    }
}

/**
 * Implements hook_entity_update().
 */
function portland_entity_update($entity)
{
    if ($entity->bundle() == 'alert') {
        // if moderation state has changed, update alerts count in cache
        $origstate = $entity->original->get('moderation_state')->getString();
        $newstate = $entity->get('moderation_state')->getString();
        if ($origstate != $newstate) {
            _portland_get_active_alerts_count(true);
        }
    }
}

/**
 * Implements hook_entity_delete().
 */
function portland_entity_delete($entity)
{
    if ($entity->bundle() == 'alert') {
        // alert has been deleted, update alerts count in cache
        _portland_get_active_alerts_count(true);
    }
}

/*
 * Retrieves the number of active alerts. Uses caching.
 */
function _portland_get_active_alerts_count($reset = false)
{
    $alertCount = 0;
    if (!$reset && $cache = \Drupal::cache()->get(ALERTS_COUNTER_CACHE_KEY)) {
        $alertCount = $cache->data;
    } else {
        // invalidate main menu block in cache to show current alerts
        \Drupal\Core\Cache\Cache::invalidateTags(['config:block.block.cloudy_main_menu']);
        $query = \Drupal::entityQuery('node')
            ->condition('type', 'alert')
            ->condition('status', 1);
        $nids = $query->execute();
        $alertCount = count($nids);
        \Drupal::cache()->set(ALERTS_COUNTER_CACHE_KEY, $alertCount);
    }
    return $alertCount;
}


